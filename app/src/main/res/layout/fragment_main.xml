<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_green"
        tools:context=".main.MainFragment">

        <ImageView
            android:id="@+id/main_placeholder_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="70dp"
            android:layout_marginRight="60dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@android:drawable/ic_menu_gallery" />

        <LinearLayout
            android:id="@+id/button_group"
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50sp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/main_placeholder_image">

            <Button
                android:id="@+id/capture_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="capture picture" />

            <Button
                android:id="@+id/create_job_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="create a job" />

            <Button
                android:id="@+id/display_jobs_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="display all jobs" />

            <Button
                android:id="@+id/display_images_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="display images" />

            <Button
                android:id="@+id/display_pdfs_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="display all pdf" />

            <Button
                android:id="@+id/create_pdf_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="display all pdf" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>